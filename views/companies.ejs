<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/companies.css">
    <title>Document</title>
</head>
<body>
    <section id="MAIN_SECTION_WRAPPER">
        <h1>Bus list</h1>
        <div id="FLEXED_CONTAINER">

    <ul id="BUS__COMPANIES__UL">
        <% if(Bus.length > 0) {%>
            <% Bus.forEach(Buses => { %>
                <li>
                    <p><%= Buses.id%></p>
                    <p id="company"><%= Buses.company%></p>
                    <p id="price"><%= Buses.price%></p>
                    <p id="date"><%= Buses.date%></p>
                    <p id="route"><%= Buses.from%></p>
                    <p id="quantity"><%= Buses.quantity%></p>
                    <p>Verified Affiliate</p>
                    <a href="/customer/<%= Buses.id%>">Book Now</a>
                </li>
            <% }) %>
        <% }else { %>
            <p>There are no bus to display</p>
        <% } %>
    </ul>

        </div>
    </section>
</body>
</html>




